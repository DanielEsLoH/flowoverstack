<%= turbo_frame_tag "modal" %>
<section class="w-10/12 mx-auto" >
  <h1 class="text-3xl font-bold mt-10">Preguntas</h1>
  <div class="flex justify-end items-center">
    <% if user_signed_in? %>
      <%= link_to new_question_path, data: {turbo_frame: 'modal'}, class: "align-self-end inline-block align-self-end mb-6 mt-3" do %>
        <div class="p-2 rounded-lg bg-blue-500 text-white text-center">
          Hacer una pregunta
        </div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "align-self-end inline-block align-self-end mb-6 mt-3" do %>
        <div class="p-2 rounded-lg bg-blue-500 text-white text-center">
          Hacer una pregunta
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <% if @questions.any? %>
      <%= render 'questions', questions: @questions %>
    <% end %>
  </div>
</section>