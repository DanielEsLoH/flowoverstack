<div class="my-4 border border-slate-300 rounded-lg overflow-y-scroll h-auto max-height" id="comments_<%= dom_id answer %>">
  <div class="bg-sky-100 flex justify-center items-center sticky top-0">
    <h2 class="text-center font-semibold text-xl p-2">Comentarios:</h2>
  </div>
  <div>
    <% comments.each do |comment| %>
      <p class="border-t-2 py-2 border-slate-200 text-sm">
        <%= comment.content %>
      </p>  
    <% end %>
  </div>
</div>